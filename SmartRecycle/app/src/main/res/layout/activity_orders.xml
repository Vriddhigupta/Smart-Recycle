<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/round_rect"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">



            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_rect"
                app:backgroundTint="@color/Redpastel"
                android:textSize="25sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/round_rect"
                app:backgroundTint="@color/Bluepastel" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_rect"
                app:backgroundTint="@color/Yellowpastel"
                android:textColor="@color/Redpastel"
                android:textSize="25sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/round_rect"
                app:backgroundTint="@color/Greenpastel" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/Yellowpastel"
                android:textSize="25sp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_rect"
                app:backgroundTint="@color/Purplepastel" />



        </LinearLayout>
    </ScrollView>

</RelativeLayout>